<link rel="stylesheet" href="messageboard.css" />

<!--メッセージ一覧センターに寄せる-->
 <div class="col-sm-offset-2 col-sm-8">
<div class="panel panel-default">
  <div class="panel-heading" align="center" >
    メッセージ一覧
  </div>

<!--メッセージの枠とラベル-->
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-warning"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
</div>

<!--名前と内容-->

 <div class="col-sm-offset-2 col-sm-8">

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>


<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>






 <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>





  <div class="form-group">
    <label for="message_name" class="col-sm-offset-1 col-sm-2 control-label">名前</label>
    <div class="col-sm-6">
        <%= f.text_area :name,:class => "form-control", cols: "80", rows: "1"  %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_name" class="col-sm-offset-1 col-sm-2 control-label">内容</label>
   <div class="col-sm-6">
     <%= f.text_area :body,:class => "form-control", cols: "80", rows: "6" %>
  </div>
   </div>
  <br /><br />

 <!--提出ボタン-->
 <div Align="center">
<%= f.submit class: "btn btn-sm btn-warning" %>
  </div>
 
 </div>
<% end %>

 
 


 
 
