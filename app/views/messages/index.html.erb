
<!--メッセージ一覧センターに寄せる-->
 <div class="col-sm-offset-2 col-sm-8">
<div class="panel panel-default">
  <div class="panel-heading" align="center" >
    メッセージ一覧
  </div>

<!--メッセージの枠とラベル-->
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-warning"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
</div>

<!--名前と内容-->
 <div class="col-sm-offset-2 col-sm-8">
<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
<div Align="center">
  名前:
  <%= f.text_area :name, cols: "80", rows: "1"  %>
  <br/>
  内容:
  <%= f.text_area :body,  cols: "80", rows: "6" %>
 <br/><br/>

 <!--提出ボタン-->
<%= f.submit class: "btn btn-sm btn-warning" %>
  </div>
<% end %>
 
 
 
